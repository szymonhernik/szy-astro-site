---
import Header from "../components/Header.astro";
import Typewriter from "../components/Typewriter.astro";
import "../styles/global.css";
import { ViewTransitions } from "astro:transitions";

const { pageTitle, currentPage } = Astro.props;
const isHomePage = currentPage === "/";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <ViewTransitions />
    <title>{pageTitle}</title>
  </head>
  <body class="min-h-screen p-4">
    <Typewriter text="my site is under continuous construction" />
    <div
      class={`text-lg w-full  max-w-4xl max-h-[800px] mx-auto bg-white bg-opacity-50 shadow-lg overflow-hidden ${isHomePage ? "h-auto md:h-[70vh]" : "h-[70vh]"}`}
    >
      <!-- Desktop Layout -->
      <div class="hidden md:flex h-full">
        <!-- Sidebar -->
        <Header currentPage={currentPage} pageTitle={pageTitle} />
        <!-- Content -->
        <div class="flex-1 p-4 overflow-y-auto">
          <div class="">
            <slot />
          </div>
        </div>
      </div>

      <!-- Mobile Layout -->
      <div class="flex flex-col h-full md:hidden">
        <!-- Header -->
        <Header
          currentPage={currentPage}
          pageTitle={pageTitle}
          isMobile={true}
        />
        <!-- Content -->
        {
          !isHomePage && (
            <div class="flex-1 p-4 overflow-auto">
              <div class="">
                <slot />
              </div>
            </div>
          )
        }
      </div>
    </div>
  </body>
</html>
