---
import Header from "../components/Header.astro";
import "../styles/global.css";
import { ViewTransitions } from "astro:transitions";

const { pageTitle, currentPage } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <ViewTransitions />
    <title>{pageTitle}</title>
    <style></style>
  </head>
  <body class="">
    <div
      class="content-wrapper mx-4 text-lg md:flex md:flex-row-reverse mt-16 md:max-w-screen-lg md:w-[80%] md:absolute md:right-[100px] md:top-0"
    >
      <Header currentPage={currentPage} />

      <div class="bg-white bg-opacity-50 h-[70dvh] w-full overflow-y-auto">
        <slot />
      </div>
    </div>
    <div class="w-full px-4 h-12">
      <div class="w-full mt-80 h-full"></div>
    </div>
    <!-- <Header /> -->
    <!-- <h1>{pageTitle}</h1> -->

    <!-- <Footer /> -->

    <script>
      import "../scripts/menu.js";
    </script>
  </body>
</html>
